@page
@model ratemyprofessors.Pages.Admin.courseProf.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>
                    <button class="btn btn-primary" asp-page-handler="SortProf">Prof</button>
                </th>
                <th>
                    <button class="btn btn-primary" asp-page-handler="SortCourse">Course</button>
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProfCourse[0].Course)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.ProfCourse)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Professor.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Course.AliasNames)
                    </td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                        <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                        <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</form>
