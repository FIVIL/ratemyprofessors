@page
@model ratemyprofessors.Pages.courses.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Course</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Course.ID" />
            <div class="form-group">
                <label asp-for="Course.Name" class="control-label"></label>
                <input asp-for="Course.Name" class="form-control" />
                <span asp-validation-for="Course.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.AliasNames" class="control-label"></label>
                <input asp-for="Course.AliasNames" class="form-control" />
                <span asp-validation-for="Course.AliasNames" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Course.FacultyID" class="control-label"></label>
                <select asp-for="Course.FacultyID" class="form-control" asp-items="ViewBag.FacultyID"></select>
                <span asp-validation-for="Course.FacultyID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Course.Approved" /> @Html.DisplayNameFor(model => model.Course.Approved)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
